---
import Button from './Button.astro'; // Import the reusable Button component
---
<footer>
    <h2>My socials:</h2>
    <div class="socials">
        <Button
                text="GitHub"
                href="https://github.com/Icewav3"
                icon="fa-brands fa-github fa-lg"
                target="_blank"
        />
        <Button
                text="LinkedIn"
                href="https://www.linkedin.com/in/cole-dorman-313b0a238/"
                icon="fa-brands fa-linkedin fa-lg"
                target="_blank"
        />
    </div>
</footer>
<style>
	footer {
		justify-content: center;
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: var(--padding-size);
		/* background-color: var(--container-bg-color); */
		color: var(--primary-text-color);
	}

	footer h2 {
		color: var(--primary-text-color);
		font-weight: bold;
		margin-bottom: calc(var(--padding-size) / 2);
	}

	footer .socials {
		display: flex;
		justify-content: center;
		gap: 20px;
	}
</style>