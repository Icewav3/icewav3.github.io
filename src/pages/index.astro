    </header>

    <main>
        <section id="intro">
            <!-- Introduction text -->
            <h1>Cole Dorman</h1>
            <p>> Game developer & Project Manager</p>
        </section>
    </main>
    <div class="push"></div>
    <footer>
        <p>My socials:</p>
