---
// src/layouts/ProjectPageLayout.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button.astro";
export interface Props {
    title?: string; // Optional title prop
}

/*
TODO
potentially edit project page layouts to a new format

need to be able to have technical details but also keep attention of somone
 not as interested

Header
Goal (why does this matter)
Project title
Content
Conclusion (relating results to the goal)
Footer


*/


// Use Astro.props to get props
const {title = "Project"} = Astro.props;
---

<BaseLayout title={title}>
    <main>
        <!--title section-->
        <slot name="title">
            <h1>Project Placeholder</h1>
        </slot>
        <!--goals section-->
        <h2>Project Goals</h2>
        <slot name="goal">
            <p>This is where you would explain the core objective or problem
                this project addresses.</p>
        </slot>
        <!--main content-->
        <slot/>
        <!--conclusion section-->
        <h2>Conclusion</h2>
        <slot name="conclusion">
            <p>Tie everything back to mission statement</p>
        </slot>
        <!-- Button to navigate back to projects -->
        <div class="back-button-container">
            <Button text="Back to Projects" href="/projects"/>
        </div>
    </main>
</BaseLayout>

<style>
	.back-button-container {
		display: flex;
		justify-content: center;
		align-items: center;
		/* padding: var(--padding-size) 0; */
		margin-top: 2rem;
	}

	/* Iframe setup (cascading) */
	:global(.game-container iframe) {
		width: 100%;
		height: auto;
		aspect-ratio: 16 / 9;
		max-width: calc(100vw - 8 * var(--padding-size));
		max-height: calc(100vh - 8 * var(--padding-size));
		border: none; /* Remove border */
		display: block;
	}
</style>