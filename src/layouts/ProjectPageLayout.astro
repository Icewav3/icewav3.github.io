---
// src/layouts/ProjectPageLayout.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button.astro";
export interface Props {
    title?: string; // Optional title prop
}

// Use Astro.props to get props
const {title = "Project"} = Astro.props;
---

<BaseLayout title={title}>
    <main>
        <slot/>

        <!-- Button to navigate back to projects -->
        <div class="back-button-container">
            <Button text="Back to Projects" href="/projects"/>
        </div>
    </main>
</BaseLayout>

<style>
	.back-button-container {
		display: flex;
		justify-content: center;
		align-items: center;
		/* padding: var(--padding-size) 0; */
		margin-top: 2rem;
	}

	/* Iframe setup (cascading) */
	:global(.game-container iframe) {
		width: 100%;
		height: auto;
		aspect-ratio: 16 / 9;
		max-width: calc(100vw - 8 * var(--padding-size));
		max-height: calc(100vh - 8 * var(--padding-size));
		border: none; /* Remove border */
		display: block;
	}
</style>